<%- model_class = Person -%>
<div class="page-header">
	<h4>Search Results</h4>
</div>
<% @people.each do |person| %>
<table class="table table-striped">
	<tbody>
		
		<tr>
			<td><%= image_tag "photo-1.png", :height => '32', :width => '32' %></td>
			<td><%= link_to person.lname + ", " + person.fname, person %><br> <%= person.ntid %><br>
				<div id="<%= person.id %>" class="accordion-body collapse" style="height: 0px; ">
					<div class="accordion-inner">
						<table>
							<tr><td>Title:</td> <td><%= person.title %></td></tr>
							<tr><td>Department:</td> <td><%= person.department %></td></tr>
						  <tr><td>Address:</td> <td><%= person.address %><br><%= person.city %>, <%= person.state %> <%= person.zipcode %><br><%= person.country %></td></tr>

						</table>
					</div>
				</div>

				<!-- End accordian area -->
				</td>      
			<td><%= number_to_phone(person.phone, :area_code => true) %><br><%= mail_to person.email %></td>
			<td>Suite: <%= person.suite %><br>Column: <%= person.column %></td>
			<td><%= image_tag "map_icon1.png", :width => '32' %></td>
			<td><a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#<%= person.id %>"> <button type="link" class="btn btn-info btn-small">
				<i class="icon-chevron-down"></i>
			</button></a></td>



			<!-- <td>
			<%= link_to t('.edit', :default => t("helpers.links.edit")),
			edit_person_path(person), :class => 'btn btn-mini' %>
			<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
			person_path(person),
			:method => :delete,
			:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
			:class => 'btn btn-mini btn-danger' %>
			</td> -->
		</tr>

		
	</tbody>
</table>



<% end %>

